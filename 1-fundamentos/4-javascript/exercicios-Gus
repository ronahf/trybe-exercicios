let money = 50;
let cart = [];
let bigger = 0;

for(let index=0; index < price.length; index +=1){
    if (price[index] <= money){
        cart.push(items[index] + ' = R$' + price[index]);
    } else{
        console.log('ai');
    }

    if(price[index] <= money && price[index] > bigger){
        bigger = price[index];
    }
}

console.log(cart);
console.log(bigger);